{
    "plugins": ["plugins/markdown"],
    "recurseDepth": 10,
    "source": {
		"include": ["src", "README.md"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
	"opts": {
		"destination": "./docs/",
		"template": "node_modules/ink-docstrap/template",
		"recurse": true
	},
	"templates": {
		"systemName": "CYT",
		"footer": "Customize Your Travel project",
		"includeData": false,
		"linenums": true,
		"theme": "cosmo",
		"search": false
	},
	"markdown": {
		"parser": "gfm",
		"hardwrap": true
	}
}
